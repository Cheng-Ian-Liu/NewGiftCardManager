<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cjl.newgiftcardmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddCardActivity"
            android:label="@string/title_activity_add_card"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cjl.newgiftcardmanager.MainActivity" />
        </activity>
        <activity
            android:name=".CardRecordActivity"
            android:label="@string/title_activity_card_record"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cjl.newgiftcardmanager.MainActivity" />
        </activity>
        <activity
            android:name=".DeleteCardsActivity"
            android:label="@string/title_activity_delete_cards"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cjl.newgiftcardmanager.MainActivity" />
        </activity>
        <activity
            android:name=".UpdateCardsActivity"
            android:label="@string/title_activity_update_cards"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cjl.newgiftcardmanager.MainActivity" />
        </activity>
    </application>

</manifest>
